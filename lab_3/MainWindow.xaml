<Window x:Class="lab_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_3"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Percentage Calculator" Height="700" Width="720" MinWidth="700" MinHeight="680" SizeToContent="Height"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="260"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="8,6"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="260"/>
        </Style>
    </Window.Resources>
    <Grid Background="#E0F2F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Volume Calculator" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0,20,0,30"
                   Foreground="#2C5F7C"
                   HorizontalAlignment="Center"/>

        <!-- Container Selection -->
        <TextBlock Grid.Row="1" 
                   Text="Select container:" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,2" 
                   Foreground="#7E57C2"/>
        <ComboBox Grid.Row="2" 
                  ItemsSource="{Binding StandardContainers}"
                  SelectedItem="{Binding SelectedContainer, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Custom Volume Input -->
        <TextBlock Grid.Row="3" 
                   Text="Volume (ml):" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,10,0,2" 
                   Foreground="#7E57C2"/>
        <TextBox Grid.Row="4" 
                 Text="{Binding CustomVolume, UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding IsCustomVolumeEnabled}"
                 PreviewTextInput="NumericOnly_PreviewTextInput"
                 materialDesign:HintAssist.Hint="Enter volume"/>

        <!-- Percentage Content -->
        <TextBlock Grid.Row="5" 
                   Text="Percentage content (%):" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,10,0,2" 
                   Foreground="#7E57C2"/>
        <TextBox Grid.Row="6" 
                 Text="{Binding PercentageContent, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="NumericOnly_PreviewTextInput"
                 materialDesign:HintAssist.Hint="Enter percentage"/>

        <!-- Number of Containers -->
        <TextBlock Grid.Row="7" 
                   Text="Number of containers:" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,10,0,2" 
                   Foreground="#7E57C2"/>
        <TextBox Grid.Row="8" 
                 Text="{Binding NumberOfContainers, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="IntegerOnly_PreviewTextInput"
                 materialDesign:HintAssist.Hint="Enter quantity"/>

        <!-- Calculate Button -->
        <Button Grid.Row="9" 
                Command="{Binding CalculateCommand}"
                Margin="0,20,0,16"
                Padding="60,20"
                FontSize="22"
                FontWeight="Bold"
                Width="300"
                Click="Button_Click"
                HorizontalAlignment="Center"
                Background="#7E57C2" BorderBrush="Transparent">
            <TextBlock Text="Calculata" Foreground="White" FontSize="22" FontWeight="Bold" TextAlignment="Center"/>
        </Button>

        <!-- Results -->
        <TextBlock Grid.Row="10" 
                   Text="Result:" 
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#7E57C2"
                   Margin="0,10,0,10"/>
        <TextBlock Grid.Row="11" 
                   Text="{Binding TotalVolumeResult}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#7E57C2"
                   Margin="0,4"
                   HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="12" 
                   Text="{Binding PureSubstanceVolumeResult}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#7E57C2"
                   Margin="0,4,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Error Message -->
        <TextBlock Grid.Row="13" 
                   Text="{Binding ErrorMessage}" 
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#D32F2F"
                   TextWrapping="Wrap"
                   Margin="20,5,20,15"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>